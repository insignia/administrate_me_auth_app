<% columns = klass.content_columns.dup -%> 
<%%=
  present :elegant do |p|
    p.header do |r|
      r.field '<%= columns.first.name.humanize %>', @resource.<%= columns.shift.name %>
    end
<% unless columns.empty? -%>
    p.body do |r|
<% columns.each do |column| -%>
      r.field '<%= column.name.humanize %>', @resource.<%= column.name %>
<% end -%>
    end
<% end -%>
    p.actions do |r|
#      r.text link_to('manage some nested resource', path_to_some_resource_path(@resource))
      r.text edit_action
      r.text destroy_action
      r.text back_action
    end
  end
%>
